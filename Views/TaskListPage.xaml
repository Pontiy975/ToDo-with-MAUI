<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.TaskListPage"
             xmlns:viewmodel="clr-namespace:ToDoApp.ViewModels"
             x:DataType="viewmodel:TaskListViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            <Frame Padding="0" Background="#eee">
                <Button Clicked="DisplayPrompt"
                        Text="Add task"
                        FontSize="20"
                        FontFamily="OpenSans-Semibold"
                        HorizontalOptions="FillAndExpand"
                        Background="Transparent"
                        TextColor="Black"/>
            </Frame>
            
            <CollectionView ItemsSource="{Binding CurrentProfile.Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:Task">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TaskListViewModel}}, Path=RemoveTaskCommand}"
                                           CommandParameter="{Binding ID}"/>
                            </SwipeView.RightItems>
                            <Grid Padding="0, 5">
                                <Frame>
                                    <Label Text="{Binding Text}" FontSize="24"/>
                                </Frame>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
