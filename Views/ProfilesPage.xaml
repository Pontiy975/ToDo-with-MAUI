<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Profiles"
             xmlns:model="clr-namespace:ToDoApp.Models"
             xmlns:viewmodel="clr-namespace:ToDoApp.ViewModels"
             x:DataType="viewmodel:ProfilesViewModel"
             x:Class="ToDoApp.Views.ProfilesPage">

    <VerticalStackLayout Padding="30" Spacing="25">
        <Grid ColumnSpacing="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" Background="red">
                <Button Text="Clear profiles"
                        Clicked="ClearProfiles"
                        Background="Transparent"
                        TextColor="White"
                        FontSize="20"
                        FontFamily="OpenSans-Semibold"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="0">
                <Button Text="Add profile"
                        Clicked="DisplayPrompt"
                        Background="Transparent"
                        TextColor="Black"
                        FontSize="20"
                        FontFamily="OpenSans-Semibold"/>
            </Border>
        </Grid>

        <CollectionView ItemsSource="{Binding Profiles}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Profile">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItem Text="Delete"
                                BackgroundColor="Red"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ProfilesViewModel}}, Path=RemoveProfileCommand}"
                                CommandParameter="{Binding ID}"/>
                        </SwipeView.RightItems>
                        <Grid Padding="0, 5">
                            <Frame>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ProfilesViewModel}}, Path=OpenProfileCommand}"
                                        CommandParameter="{Binding ID}"/>
                                </Frame.GestureRecognizers>

                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontSize="24"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>






